<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jun.plugin.biz.model.CompanyDao">

    <resultMap id="Company" type="com.jun.plugin.biz.model.Company" >
        <result column="COMPANY_ID" property="companyId" />
        <result column="NAME" property="name" />
        <result column="TEL" property="tel" />
        <result column="FAX" property="fax" />
        <result column="ADDRESS" property="address" />
        <result column="ZIP" property="zip" />
        <result column="EMAIL" property="email" />
        <result column="CONTACT" property="contact" />
        <result column="STATUS" property="status" />
        <result column="CREATED" property="created" />
        <result column="LASTMOD" property="lastmod" />
        <result column="MANAGER" property="manager" />
        <result column="BANK" property="bank" />
        <result column="BANKACCOUNT" property="bankaccount" />
        <result column="DESCRIPTION" property="description" />
        <result column="CREATER" property="creater" />
        <result column="MODIFYER" property="modifyer" />
    </resultMap>

    <sql id="Base_Column_List">
        `COMPANY_ID`,
        `NAME`,
        `TEL`,
        `FAX`,
        `ADDRESS`,
        `ZIP`,
        `EMAIL`,
        `CONTACT`,
        `STATUS`,
        `CREATED`,
        `LASTMOD`,
        `MANAGER`,
        `BANK`,
        `BANKACCOUNT`,
        `DESCRIPTION`,
        `CREATER`,
        `MODIFYER`
    </sql>

    <insert id="insert" parameterType="java.util.Map" >
        INSERT INTO company (
            `COMPANY_ID`,
            `NAME`,
            `TEL`,
            `FAX`,
            `ADDRESS`,
            `ZIP`,
            `EMAIL`,
            `CONTACT`,
            `STATUS`,
            `CREATED`,
            `LASTMOD`,
            `MANAGER`,
            `BANK`,
            `BANKACCOUNT`,
            `DESCRIPTION`,
            `CREATER`,
            `MODIFYER`
        )
        VALUES(
            #{company.companyId},
            #{company.name},
            #{company.tel},
            #{company.fax},
            #{company.address},
            #{company.zip},
            #{company.email},
            #{company.contact},
            #{company.status},
            #{company.created},
            #{company.lastmod},
            #{company.manager},
            #{company.bank},
            #{company.bankaccount},
            #{company.description},
            #{company.creater},
            #{company.modifyer}
        )
    </insert>

    <delete id="delete" parameterType="java.util.Map" >
        DELETE FROM company
        WHERE `id` = #{id}
    </delete>

    <update id="update" parameterType="java.util.Map" >
        UPDATE company
        SET
            COMPANY_ID = #{company.companyId},
            NAME = #{company.name},
            TEL = #{company.tel},
            FAX = #{company.fax},
            ADDRESS = #{company.address},
            ZIP = #{company.zip},
            EMAIL = #{company.email},
            CONTACT = #{company.contact},
            STATUS = #{company.status},
            CREATED = #{company.created},
            LASTMOD = #{company.lastmod},
            MANAGER = #{company.manager},
            BANK = #{company.bank},
            BANKACCOUNT = #{company.bankaccount},
            DESCRIPTION = #{company.description},
            CREATER = #{company.creater},
            MODIFYER = #{company.modifyer},
            UpdateTime = NOW()
        WHERE `id` = #{company.id}
    </update>


    <select id="load" parameterType="java.util.Map" resultMap="Company">
        SELECT <include refid="Base_Column_List" />
        FROM company
        WHERE `id` = #{id}
    </select>

    <select id="pageList" parameterType="java.util.Map" resultMap="Company">
        SELECT <include refid="Base_Column_List" />
        FROM company
        LIMIT #{offset}, #{pagesize}
    </select>

    <select id="pageListCount" parameterType="java.util.Map" resultType="int">
        SELECT count(1)
        FROM company
    </select>

</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jun.plugin.biz.model.UserDao">

    <resultMap id="User" type="com.jun.plugin.biz.model.User" >
        <result column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="nick_name" property="nickName" />
        <result column="sex" property="sex" />
        <result column="register_date" property="registerDate" />
    </resultMap>

    <sql id="Base_Column_List">
        `id`,
        `username`,
        `password`,
        `nick_name`,
        `sex`,
        `register_date`
    </sql>

    <insert id="insert" parameterType="java.util.Map" >
        INSERT INTO user (
            `id`,
            `username`,
            `password`,
            `nick_name`,
            `sex`,
            `register_date`
        )
        VALUES(
            #{user.id},
            #{user.username},
            #{user.password},
            #{user.nickName},
            #{user.sex},
            #{user.registerDate}
        )
    </insert>

    <delete id="delete" parameterType="java.util.Map" >
        DELETE FROM user
        WHERE `id` = #{id}
    </delete>

    <update id="update" parameterType="java.util.Map" >
        UPDATE user
        SET
            id = #{user.id},
            username = #{user.username},
            password = #{user.password},
            nick_name = #{user.nickName},
            sex = #{user.sex},
            register_date = #{user.registerDate},
            UpdateTime = NOW()
        WHERE `id` = #{user.id}
    </update>


    <select id="load" parameterType="java.util.Map" resultMap="User">
        SELECT <include refid="Base_Column_List" />
        FROM user
        WHERE `id` = #{id}
    </select>

    <select id="pageList" parameterType="java.util.Map" resultMap="User">
        SELECT <include refid="Base_Column_List" />
        FROM user
        LIMIT #{offset}, #{pagesize}
    </select>

    <select id="pageListCount" parameterType="java.util.Map" resultType="int">
        SELECT count(1)
        FROM user
    </select>

</mapper>

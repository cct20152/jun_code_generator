<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jun.plugin.biz.model.TUserDao">

    <resultMap id="TUser" type="com.jun.plugin.biz.model.TUser" >
        <result column="id" property="id" />
        <result column="username" property="username" />
        <result column="salt" property="salt" />
        <result column="password" property="password" />
        <result column="phone" property="phone" />
        <result column="dept_id" property="depid" />
        <result column="real_name" property="realName" />
        <result column="nick_name" property="nickName" />
        <result column="email" property="email" />
        <result column="status" property="status" />
        <result column="sex" property="sex" />
        <result column="deleted" property="deleted" />
        <result column="create_id" property="createId" />
        <result column="update_id" property="updateId" />
        <result column="create_where" property="createWhere" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <sql id="Base_Column_List">
        `id`,
        `username`,
        `salt`,
        `password`,
        `phone`,
        `dept_id`,
        `real_name`,
        `nick_name`,
        `email`,
        `status`,
        `sex`,
        `deleted`,
        `create_id`,
        `update_id`,
        `create_where`,
        `create_time`,
        `update_time`
    </sql>

    <insert id="insert" parameterType="java.util.Map" >
        INSERT INTO t_user (
            `id`,
            `username`,
            `salt`,
            `password`,
            `phone`,
            `dept_id`,
            `real_name`,
            `nick_name`,
            `email`,
            `status`,
            `sex`,
            `deleted`,
            `create_id`,
            `update_id`,
            `create_where`,
            `create_time`,
            `update_time`
        )
        VALUES(
            #{tUser.id},
            #{tUser.username},
            #{tUser.salt},
            #{tUser.password},
            #{tUser.phone},
            #{tUser.depid},
            #{tUser.realName},
            #{tUser.nickName},
            #{tUser.email},
            #{tUser.status},
            #{tUser.sex},
            #{tUser.deleted},
            #{tUser.createId},
            #{tUser.updateId},
            #{tUser.createWhere},
            #{tUser.createTime},
            #{tUser.updateTime}
        )
    </insert>

    <delete id="delete" parameterType="java.util.Map" >
        DELETE FROM t_user
        WHERE `id` = #{id}
    </delete>

    <update id="update" parameterType="java.util.Map" >
        UPDATE t_user
        SET
            id = #{tUser.id},
            username = #{tUser.username},
            salt = #{tUser.salt},
            password = #{tUser.password},
            phone = #{tUser.phone},
            dept_id = #{tUser.depid},
            real_name = #{tUser.realName},
            nick_name = #{tUser.nickName},
            email = #{tUser.email},
            status = #{tUser.status},
            sex = #{tUser.sex},
            deleted = #{tUser.deleted},
            create_id = #{tUser.createId},
            update_id = #{tUser.updateId},
            create_where = #{tUser.createWhere},
            create_time = #{tUser.createTime},
            update_time = #{tUser.updateTime},
            UpdateTime = NOW()
        WHERE `id` = #{tUser.id}
    </update>


    <select id="load" parameterType="java.util.Map" resultMap="TUser">
        SELECT <include refid="Base_Column_List" />
        FROM t_user
        WHERE `id` = #{id}
    </select>

    <select id="pageList" parameterType="java.util.Map" resultMap="TUser">
        SELECT <include refid="Base_Column_List" />
        FROM t_user
        LIMIT #{offset}, #{pagesize}
    </select>

    <select id="pageListCount" parameterType="java.util.Map" resultType="int">
        SELECT count(1)
        FROM t_user
    </select>

</mapper>
